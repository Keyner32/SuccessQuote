<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="350dp"
             android:layout_height="400dp"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_gravity="center"
             android:background="@drawable/background_dialog_quote">
    <EditText
        android:id="@+id/dialog_title"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dialog_body"
        android:paddingBottom="20dp"
        android:layout_centerInParent="true"
        android:hint="Author Name ..."/>

    <EditText
        android:id="@+id/dialog_body"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="12dp"
        android:hint="Quote Text ..."/>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#f299"
        android:gravity="center"
        android:clickable="true"
        app:srcCompat="@drawable/ic_quote"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/dialog_body"
        android:layout_marginBottom="45dp"
        android:id="@+id/post"/>

    <Spinner
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:layout_marginTop="11dp"
        android:id="@+id/spinner_category"
        android:layout_below="@+id/dialog_body"
        android:layout_alignStart="@+id/dialog_body"/>

    <TextView
        android:id="@+id/quote_header"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="27sp"
        android:text="P o s t   a   Q u o t e"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/dialog_title"
        android:layout_marginTop="51dp"
        />

</RelativeLayout>
